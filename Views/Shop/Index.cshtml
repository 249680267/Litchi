@model IEnumerable<LitchiServer.Models.vShopMessage>

@{
    ViewBag.Title = "店铺信息";
}

<h2>店铺信息列表</h2>

<p>
    @Html.ActionLink("新增店铺", "Create")
</p>
<table>
    <tr>
        <th>
            编号
        </th>
        <th>
           店铺名称
        </th>
        <th>
           描述
        </th>
        <th>
           店铺地址
        </th>
        <th>
            区域
        </th>
        <th>
            联系电话
        </th>
        <th>
            服务覆盖范围
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.pk_SEShop_ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nvrShopName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nvrDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.vrAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nvrArea)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.vrPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fltScope)
        </td>
        <td>
            @Html.ActionLink("修改信息", "Edit", new { id=item.pk_SEShop_ID }) |
            @Html.ActionLink("详情", "Details", new { id=item.pk_SEShop_ID }) |
            @Html.ActionLink("删除", "Delete", new { id=item.pk_SEShop_ID })
        </td>
    </tr>
}

</table>
